function moveAllSheetsToFolder() {
  // Change this to the name of your target folder
  const targetFolderName = "MY_Google_Sheets";

  // Get the target folder
  const folders = DriveApp.getFoldersByName(targetFolderName);
  if (!folders.hasNext()) {
    Logger.log("Folder not found: " + targetFolderName);
    return;
  }
  const targetFolder = folders.next();

  // Get all files in the root of your Google Drive
  const files = DriveApp.getRootFolder().getFiles();

  let movedCount = 0;
  while (files.hasNext()) {
    const file = files.next();

    // Check if file is a Google Sheet
    if (file.getMimeType() === MimeType.GOOGLE_SHEETS) {
      targetFolder.addFile(file);               // Add file to target folder
      DriveApp.getRootFolder().removeFile(file); // Remove from root folder
      movedCount++;
    }
  }

  Logger.log(movedCount + " Google Sheets moved to folder: " + targetFolderName);
}
